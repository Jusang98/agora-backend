extends ../base

block content
    board(src=`/${board.fileUrl}`)
    div
        h4=board.title
        p=board.content
        samll= board.createdAt
        br
    if loggedInUser
        if String(board.owner._id) === String(loggedInUser._id)
            a(href=`${board.id}/edit`) Edit board &rarr;
            br
            a(href=`${board.id}/delete`) Delete board &rarr;
